    custom_css = '''/* Custom Styles f√ºr KI-System */
.gradient-text {
    background: linear-gradient(45deg, #007bff, #28a745);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.chat-typing {
    display: flex;
    align-items: center;
